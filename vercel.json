{
  "buildCommand": "npm run build && npm run setup",
  "outputDirectory": "build/client",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "build/server/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/apps/cart-drawer/api/settings",
      "destination": "/api/app/proxy/settings"
    },
    {
      "source": "/cart-drawer.js",
      "destination": "/build/client/cart-drawer.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    }
  ]
}