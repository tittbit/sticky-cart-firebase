{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install",
  "functions": {
    "build/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/apps/cart-drawer/api/(.*)",
      "dest": "/app/proxy.settings"
    },
    {
      "src": "/cart-drawer.js",
      "dest": "/cart-drawer.js"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/apps/cart-drawer/api/settings",
      "destination": "/app/proxy.settings"
    }
  ]
}