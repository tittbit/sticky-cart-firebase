{% comment %} App Embed to load Sticky Cart Drawer assets and expose settings {% endcomment %}

{%- liquid
  assign enabled = block.settings.enabled | default: true
-%}

{%- if enabled -%}
  {%- render 'sticky-cart-initializer' -%}
{%- endif -%}

{% schema %}
{
  "name": "Sticky Cart Drawer",
  "target": "body",
  "javascript": "cart-drawer-optimized.js",
  "stylesheet": "cart-drawer.css",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Sticky Cart Drawer",
      "default": true,
      "info": "All other settings are now managed from your app dashboard. Use this checkbox to quickly enable or disable the cart drawer in your theme."
    }
  ]
}
{% endschema %}
